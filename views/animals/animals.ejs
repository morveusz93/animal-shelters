<% layout("layouts/boilerplate") %>

<div class="col-md-10 offset-md-1 text-center mb-5">
  <h1>All animals</h1>
  <div class="row">
    <% for( animal of animals ) { %>
    <div class="col-sm-6 col-md-4 col-lg-3">
      <div class="card my-1">
        <img
          height="200px"
          src="<%= animal.image %> "
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h5 class="card-title"><%= animal.name %></h5>
          <p class="card-text">
            <%= animal.age.years %> years <%= animal.age.months %> months.
          </p>
          <a href="/animals/<%= animal._id %>" class="btn btn-primary"
            >Details</a
          >
        </div>
      </div>
    </div>

    <% } %>
  </div>
</div>
